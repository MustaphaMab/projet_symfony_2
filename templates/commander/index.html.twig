{% extends 'base.html.twig' %}


{% block body %}
	<h1 class="text-center">
		Liste des commandes
	</h1>
	<a class="btn btn-outline-secondary" href="{{ path('ajout_commande') }}" onclick="return confirm('Vous étes sur de vouloir ajouter une commande?')">Ajout</a>


	<table class="border=1 w-75 mx-auto table table-dark table-striped-columns">
		<tr>
			<th>
				Livre
			</th>
			<th>
				Fournisseur
			</th>
			<th>
				Date d'achat
			</th>
			<th>
				Prix d'achat
			</th>
			<th>
				Nbr d'exemplaires
			</th>

			<th>Action
			</th>

		</tr>

		{% for commande in commandes %}
			<tr>
				<td>{{ commande.idlivre.TitreLivre }}</td>
				<td>{{ commande.idfournisseur.RaisonSociale }}</td>
				<td>{{ commande.dateachat |date('Y-m-d') }}</td>
				<td>{{ commande.prixachat }}</td>
				<td>{{ commande.nbrexemplaires }}</td>

				<td>

					<div class="container d-flex flex-raw">
						<a class="btn btn-outline-info" href="{{ path('form_commander_modif', {'id':commande.id}) }}" onclick=" return confirm('vous étes sur de vouloir modifer vos données?')">Modifier</a>

						<a class="btn btn-outline-danger" href="{{ path('supprime_commande', {'id':commande.id}) }}" onclick="return confirm('Vous étes sur ? Vos données seront perdus.')">Supprimer</a>

					</div>

				</td>
			</tr>
		{% endfor %}


	</table>
{% endblock %}
